.page-body
  +mobile()
    flex-direction: column

.header
  .page-title
    +mobile()
      font-size: 14px

.sidebar
  +mobile()
    width: 100%
    min-width: 264px
    flex-direction: row
    justify-content: space-around
    height: auto
    padding-top: 10px
    padding-bottom: 10px
  
  .building-icon
    +mobile()
      margin-top: 0
      margin-bottom: 0
      margin-right: 10px
      margin-left: 0
      flex-shrink: 0

  .plus-icon
    +mobile()
      margin-top: 0
      margin-bottom: 0
      margin-right: 10px
      margin-left: 0
      flex-shrink: 0
  
  .item
    +mobile()
      height: 50px
      margin-bottom: 0
      display: flex
      flex-direction: row
      align-items: center
      padding: 10px
      flex-shrink: 0

.main-container
  +mobile()
    flex-direction: column
  
.filter-box
  +mobile()
    height: 294px
    width: initial
    flex-shrink: 0
    margin-left: 10px
    margin-right: 10px
    
  .fields-line
    +mobile()
      justify-content: flex-start
      flex-shrink: 0
      flex-wrap: nowrap
      
  .field-box
    +mobile()
      margin-right: 13px
  
.content-box
  +mobile()
    padding-right: 10px
    padding-left: 10px
    max-width: initial
    min-width: initial
    background-color: #f0f0f0
  
.ad-box
  +mobile()
    height: auto
    flex-direction: column
  
.photo-container
  +mobile()
    width: 100%
    height: 254.81px
  
.ad-info
  +mobile()
    max-width: 339px
    min-width: 270px
    padding-bottom: 12px
    flex-shrink: 0
  
.ad-content
  +mobile()
    padding-right: 16.3px
    height: auto
  
.ad-footer
  +mobile()
    height: auto
    flex-direction: column
    flex-shrink: 0
    padding-left: 16.3px
    padding-right: 16.3px
    padding-top: 12px
  
  .view-button
    +mobile()
      width: 100%
  
  .ad-details-list
    +mobile()
      margin-left: 0
      margin-bottom: 10px