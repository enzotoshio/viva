global-reset()

div, section, h1, h2, h3
  box-sizing: border-box
  
html
  width: 100%
  height: 100%

body
  background-color: #e0e0e0
  width: 100%
  height: 100%
  font-family: Roboto

.page-body
  overflow: hidden
  width: 100%
  height: 100%

.page-title
  font-size: 24px
  font-weight: bold
  font-stretch: condensed
  color: #ffffff
  line-height: 60px
  margin-left: 30px
  display: inline-block
  text-transform: uppercase

.header
  width: 100%
  height: 60px
  background-color: #1190cd
  overflow: hidden
  
.sidebar
  width: 107px
  height: 100%
  display: block
  background-color: #094e6e
  float: left
  list-style: none
  padding-top: 15px
  
  .item
    height: 72px
    clear: both
    font-size: 11px
    font-weight: bold
    font-stretch: condensed
    color: #ffffff
    text-align: center
    margin-bottom: 15px
    center(91px)
    
  .link
    text-decoration: none
    color: #ffffff
    display: block
    text-align: center
    width: 100%
  
  .title
    border-radius: 4px
    background-color: #00acff
  
.logo-container
  width: 107px
  height: 60px
  background-color: #00acff
  overflow: hidden
  float: left
  
.logo-vivareal
  width: 48px
  height: 38px
  object-fit: contain
  background-color: #ffffff
  display: block
  text-indent: -9999px
  background: url(../images/logo-vivareal.svg)
  background-size: 48px 38px
  background-repeat: no-repeat
  margin-left: 30px
  margin-top: 11px

.main-container
  float: left
  overflow: hidden
  height: 100%
  background-color: #fff
  
.filter-box
  width: 230px
  height: 100%
  border-radius: 2px
  background-color: #f9f9f9
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.12)
  float: left
  
.content-box
  width: 882px
  height: 100%
  border-radius: 2px
  background-color: #ffffff
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.12)
  float: left
  
.default-field
  width: 95px
  margin: 0 13px
  height: 36px
  border-radius: 2px
  background-color: #ffffff
  border: solid 1px #979797
  
.ad-box
  height: 224px
  border-radius: 2px
  background-color: #ffffff
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.26)
  overflow: hidden
  center(849px)
  
.ad-photo
  width: 100%
  height: 100%
  
.photo-container
  width: 297.7px
  overflow: hidden
  float: left
  
.shadowless-box
  border-radius: 2px
  border: solid 1px #e5e5e5
  
.id-box
  width: 55px
  height: 18px
  background-color: #ffffff
  margin-bottom: 11.6px
  color: #e5e5e5
  
  .text
    color: #878787
  
.ad-info
  height: 100%
  width: 551px
  float: left
  padding-top: 12px
  
.ad-content
  padding-left: 16.3px
  padding-right: 33px
  margin-bottom: 18px

.ad-title
  width: 100%
  overflow: hidden
  color: #444444
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 18px
  font-weight: normal
  font-stretch: condensed
  line-height: 1.5
  
.ad-description
  width: 100%
  font-size: 14px
  font-weight: normal
  font-stretch: condensed
  line-height: 1.5
  color: #999999
  
.ad-footer
  width: 100%
  height: 50px
  background-color: #fafafa
  box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.1)
  
.horizontal-list
  display: block
  
  .item
    float: left
    
.button
  border-radius: 2px
  background-color: #00acff
  padding: 9px 8px 8px 8px
  box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.12)
  display: inline-block
  font-size: 14px
  font-weight: bold
  font-stretch: condensed
  line-height: 1.14
  color: #ffffff

@keyframes spinner
  to {transform: rotate(360deg)}

@-webkit-keyframes spinner 
  to {-webkit-transform: rotate(360deg)}
 
.spinner
  position: relative
  min-width: 50px
  min-height: 50px
 
.spinner:before
  content: ''
  position: absolute
  top: 50%
  left: 50%
  width: 50px
  height: 50px
  margin-top: -13px
  margin-left: -13px
 
.spinner:not(:required):before
  content: ''
  border-radius: 50%
  border: 1px solid #ffffff
  border-top-color: #00acff
  animation: spinner .7s linear infinite
  -webkit-animation: spinner .7s linear infinite