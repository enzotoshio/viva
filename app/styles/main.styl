.page-body
  overflow: hidden
  width: 100%
  height: 100%
  background-color: #f0f0f0
  display: flex
  flex-direction: row
  flex-wrap: nowrap

.header
  width: 100%
  height: 60px
  background-color: #1190cd
  overflow: hidden
  display: flex
  flex-direction: row
  flex-wrap: nowrap

  .logo-container
    width: 107px
    height: 60px
    background-color: #00acff
    overflow: hidden
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    min-width: 65px

  .page-title
    font-size: 24px
    font-weight: bold
    font-stretch: condensed
    color: #ffffff
    margin-left: 30px
    text-transform: uppercase
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center  

.sidebar
  width: 107px
  min-width: 69px
  height: 1288px
  background-color: #094e6e
  list-style: none
  padding-top: 15px
  padding-left: 7px
  padding-right: 7px
  display: flex
  flex-direction: column
  align-items: stretch

  .building-icon
    margin: 7px auto 13.6px

  .plus-icon
    margin: 7px auto 11px

  .item
    height: 72px
    font-size: 11px
    font-weight: bold
    font-stretch: condensed
    color: #ffffff
    text-align: center
    margin-bottom: 15px

  .link
    text-decoration: none
    color: #ffffff
    display: block
    text-align: center
    width: 100%

  .title
    border-radius: 4px
    background-color: #00acff

.main-container
  overflow: hidden
  display: flex
  flex-direction: row
  flex-wrap: nowrap

.filter-box
  width: 230px
  height: 1272px
  border-radius: 2px
  background-color: #f9f9f9
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.12)
  margin: 16px 20px 0 18px
  display: flex
  flex-direction: column
  flex-wrap: nowrap
  flex-shrink: 4

  .filter-title
    font-family: Roboto
    font-size: 16px
    font-weight: normal
    font-stretch: condensed
    line-height: 1.25
    color: #666666
    padding: 13px 0 1px 13px

  .fields-line
    width: 100%
    border-bottom: 1px solid rgba(0, 0, 0, 0.1)
    padding: 14px 14px 18px 13px
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between

  .composed-fields-line
    width: 100%
    padding: 14px 14px 18px 13px
    display: flex
    flex-direction: column
    flex-wrap: wrap

.content-box
  max-width: 882px
  min-width: 715px
  display: flex
  flex-direction: column
  height: 100%
  border-radius: 2px
  background-color: #ffffff
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.12)
  margin-top: 16px
  padding-top: 15px
  padding-left: 16.5px
  padding-right: 16.5px

.ad-box
  height: 224px
  border-radius: 2px
  background-color: #ffffff
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.26)
  overflow: hidden
  margin-bottom: 18px
  display: flex
  flex-direction: row
  flex-wrap: nowrap

.ad-photo
  width: 100%
  height: 100%
  flex-shrink: 0

.photo-container
  width: 297.7px
  height: 223.6px
  overflow: hidden
  display: flex
  flex-direction: column
  flex-shrink: 0

.id-box
  height: 18px
  background-color: #ffffff
  margin-bottom: 11.6px
  color: #e5e5e5
  display: inline-block
  flex-shrink: 0
  padding-left: 6px
  padding-right: 6px

  .text
    text-transform: uppercase
    color: #878787
    font-size: 13px
    font-weight: bold
    color: #878787

.ad-info
  height: 100%
  max-width: 551px
  min-width: 418px
  padding-top: 12px
  display: flex
  flex-direction: column

.ad-content
  padding-left: 16.3px
  padding-right: 33px
  margin-bottom: 18px
  height: 144px
  overflow: hidden

.ad-title
  width: 100%
  overflow: hidden
  color: #444444
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 18px
  font-weight: normal
  font-stretch: condensed
  line-height: 1.5
  margin-bottom: 3.4px

.ad-description
  width: 100%
  font-size: 14px
  font-weight: normal
  font-stretch: condensed
  line-height: 1.5
  color: #999999

.ad-footer
  width: 100%
  height: 50px
  background-color: #fafafa
  box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.1)
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-between

  .view-button
    align-self: center
    margin-right: 8px

  .ad-details-list
    margin-left: 21px
    overflow: hidden

    .ad-detail
      position: relative
      text-transform: uppercase
      margin-right: 14.5px
      font-size: 13px
      font-weight: bold
      font-stretch: condensed
      color: #999999

      .icon
        margin: 0 auto
        clear: both

.pagination-line
  display: flex
  flex-direction: column
  align-items: center
  height: 32px
  margin-bottom: 15px