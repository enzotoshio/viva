.button
  text-transform: uppercase
  border-radius: 2px
  background-color: #00acff
  padding: 9px 8px 8px 8px
  box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.12)
  display: flex
  font-size: 14px
  font-weight: bold
  line-height: 1.14
  color: #ffffff
  flex-shrink: 0
  justify-content: center

.field-label
  display: block
  clear: both
  font-size: 12px
  line-height: 1.5
  color: #999999
  text-transform: uppercase

.field-conector-box
  height: 36px
  width: 13px
  display: flex
  flex-direction: column
  justify-content: center

.field-conector
  height: 1px
  background-color: #cccccc
  width: inherit
  display: block

.composed-field-box
  display: flex
  flex-direction: row
  flex-wrap: wrap

.default-field
  width: 95px
  height: 36px
  border-radius: 2px
  background-color: #ffffff
  border: solid 1px #979797
  font-family: 'Open Sans', sans-serif
  padding: 8px 8px 9px 8px
  color: #999999

.shadowless-box
  border-radius: 2px
  border: solid 1px #e5e5e5

.horizontal-list
  display: flex
  flex-direction: row

.pagination-box
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-between
  width: 150px

  .page-details
    font-size: 14px
    font-weight: normal
    color: #999
    white-space: nowrap
    margin-right: 10px
    margin-left: 10px

  .nav-button
    cursor: pointer
    user-select: none

    &.disabled
      background-color: #cccccc
      pointer-events: none

@keyframes spinner
  to {transform: rotate(360deg)}

@-webkit-keyframes spinner 
  to {-webkit-transform: rotate(360deg)}

.spinner
  position: relative
  min-width: 50px
  min-height: 50px

.spinner:before
  content: ''
  position: absolute
  top: 50%
  left: 50%
  width: 50px
  height: 50px
  margin-top: -13px
  margin-left: -13px

.spinner:not(:required):before
  content: ''
  border-radius: 50%
  border: 1px solid #ffffff
  border-top-color: #00acff
  animation: spinner .7s linear infinite
  -webkit-animation: spinner .7s linear infinite